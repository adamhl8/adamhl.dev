{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "extends": ["@adamhl8/configs/biome"],
  "files": {
    "includes": ["**", "!.astro", "!dist", "!src/pages/resume.html"]
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "assist": {
        "enabled": false
      },
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
