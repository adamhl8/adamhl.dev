{
  "name": "adamhl.dev",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "bundle": "rm -rf dist .astro && bun lint && bun bundle:prod",
    "bundle:prod": "bun generate:resume && bun ./scripts/process-favicon.ts && astro build",
    "dev": "astro dev",
    "generate:resume": "resumed render ./src/pages/_resume/resume.json -t jsonresume-theme-react-tailwind -o ./src/pages/resume.html && prettier --write ./src/pages/resume.html",
    "lint": "astro check && markdown-toc -i --bullets '-' --maxdepth 3 ./README.md && ts-import-fix -w && tsc --noEmit && prettier --write . && biome check --write && adamhl8-knip",
    "obsidian-share": "./scripts/obsidian-share.ts",
    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "preview": "astro preview",
    "upgrade": "bunx @astrojs/upgrade",
    "start:prod": "bun ./dist/server/entry.mjs"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.1",
    "@astrojs/react": "^4.4.2",
    "astro": "^5.16.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rehype-external-links": "^3.0.0"
  },
  "devDependencies": {
    "@adamhl8/configs": "0.18.0",
    "@astrojs/check": "0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.1",
    "@biomejs/biome": "^2.3.11",
    "@expressive-code/plugin-line-numbers": "^0.41.5",
    "@giscus/react": "^3.1.0",
    "@hbsnow/rehype-sectionize": "^1.0.7",
    "@iconify-json/tabler": "^1.2.26",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.3.5",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "astro-expressive-code": "^0.41.5",
    "daisyui": "^5.5.14",
    "jsonresume-theme-react-tailwind": "^1.3.0",
    "knip": "^5.80.2",
    "markdown-toc": "^1.2.0",
    "marked": "^17.0.1",
    "mdast-util-to-string": "^4.0.0",
    "prettier": "^3.7.4",
    "reading-time": "^1.5.0",
    "remark-breaks": "^4.0.0",
    "resumed": "^6.1.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "unplugin-icons": "^22.5.0",
    "valibot": "^1.2.0",
    "yaml": "^2.8.2"
  }
}
