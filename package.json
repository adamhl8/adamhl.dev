{
  "name": "adamhl.dev",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "bundle": "rm -rf dist .astro && bun generate:resume && bun lint && astro build",
    "generate:resume": "resumed render ./src/pages/_resume/resume.json -t jsonresume-theme-react-tailwind -o ./src/pages/resume.html",
    "dev": "astro dev",
    "lint": "astro check && tsc --noEmit && prettier --write . && biome check --write",
    "obsidian-share": "./obsidian-share.ts",
    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "preview": "astro preview",
    "upgrade": "bunx @astrojs/upgrade"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/rss": "^4.0.12",
    "@expressive-code/plugin-line-numbers": "^0.41.3",
    "@hbsnow/rehype-sectionize": "^1.0.7",
    "@iconify-json/tabler": "^1.2.20",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.12.8",
    "astro-expressive-code": "^0.41.3",
    "astro-icon": "^1.1.5",
    "astro-robots-txt": "^1.0.0",
    "astro-sitemap": "^1.0.0",
    "astro-webmanifest": "^1.0.0",
    "daisyui": "^5.0.50",
    "marked": "^16.1.2",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "remark-breaks": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "valibot": "v1.0.0-rc.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@adamhl8/configs": "^0.10.1",
    "@biomejs/biome": "^2.1.3",
    "@types/bun": "^1.2.19",
    "jsonresume-theme-react-tailwind": "^1.2.0",
    "prettier": "^3.6.2",
    "resumed": "^6.0.0",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1"
  }
}
