---
import "@fontsource/atkinson-hyperlegible/400.css"
import "@fontsource/atkinson-hyperlegible/400-italic.css"
import "@fontsource/atkinson-hyperlegible/700.css"
import "@fontsource/atkinson-hyperlegible/700-italic.css"
import "@fontsource-variable/jetbrains-mono"
import "rehype-callouts/theme/obsidian"
import { SITE_TITLE } from "../consts.ts"

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props

const canonicalURL = new URL(Astro.url.pathname, Astro.site)

// favicon and sitemap links are generated by integrations in astro config
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<link rel="canonical" href={canonicalURL} />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL("rss.xml", Astro.site)} />

<script is:inline defer src="https://umami.adamhl.dev/script.js" data-website-id="923498a7-4a41-412a-adb8-97ae3905b284"></script>

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />

<meta property="twitter:card" content="summary" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
